import java.util.Scanner;
public class TriangleHeight {
	public static void main(String args[]) {
		Scanner keybroad = new Scanner(System.in);
		System.out.print("Please enter height of triangle: ");
		int n = keybroad.nextInt();
		for (int i = 1; i <= n; i++) {
			int j;
			for(j = 1; j<= n-i; j++) {
				System.out.print(" ");
			}
			for(j = 1; j<= 2*i-1; j++) {
				System.out.print("*");
			}
			System.out.print("\n");
		}
		System.exit(0);
	}
}
