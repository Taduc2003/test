import java.util.Scanner;
public class TriaghleHeight {
	public static void main(String args[]) {
		Scanner keybroad = new Scanner(System.in);
		System.out.print("Please enter height: ");
		int n = keybroad.nextInt();
		for (int i = 1; i <= n; i++) {
			int j;
			for(j = 1; j<= n-i; j++) {
				System.out.print(" ");
			}
			for(j = 1; j<= 2*n-i; j++) {
				System.out.print("*");
			}
		}
		System.exit(0);
	}
}
